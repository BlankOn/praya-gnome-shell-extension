#!/bin/sh
set -e

case "$1" in
    remove|purge)
        # Remove autostart desktop file from existing users
        for HOME_DIR in /home/*; do
            [ -d "$HOME_DIR" ] || continue
            USER_NAME=$(basename "$HOME_DIR")
            USER_UID=$(id -u "$USER_NAME" 2>/dev/null) || continue
            [ "$USER_UID" -ge 1000 ] || continue
            rm -f "$HOME_DIR/.config/autostart/praya-extension-update.desktop"
        done
        ;;
esac

#DEBHELPER#

exit 0
